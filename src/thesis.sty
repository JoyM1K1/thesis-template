% 表紙用行間広め定義
\newenvironment{lineskiptitle}{%
\baselineskip = 1.5cm
}

% 表紙の定義（日本語）
\def\jmaketitle{\par
\begingroup
\@jmaketitle
\endgroup
}
\def\@jmaketitle{%
\thispagestyle{empty}
\begin{center}
  {\Large \@jprogram }
  \vspace{0.5cm}\par
  {\Large \@jcourse }
  \vfill
  \begin{lineskiptitle}
  {\LARGE \@jtitle}
  \end{lineskiptitle}
  \vfill
  {\Large \@jauthor \\ \@jmajor }
  \vspace{2cm}\par
  {\Large \@jdate}
\end{center}
\cleardoublepage
\thispagestyle{empty}
\begin{center}
  {\Large \@jprogram }
  \vspace{0.5cm}\par
  {\Large \@jcourse }
  \vfill
  \begin{lineskiptitle}
    {\LARGE \@jtitle}
  \end{lineskiptitle}
  \vfill
  {\Large \@jauthor \\ \@jmajor }
  \vspace{2cm}\par
  {\Large 指導教員 \ \ \@jsupervisor \ \ 印}
\end{center}
\pagenumbering{roman}
}

% 表紙の定義（英語）
\def\emaketitle{\par
\begingroup
\@emaketitle
\endgroup
}
\def\@emaketitle{%
\thispagestyle{empty}
\begin{center}
  \vfill
  \begin{lineskiptitle}
      \fbox{\LARGE \@etitle}
  \end{lineskiptitle}
  \vspace{2cm}\par
  {\Large \@eauthor \\ \@eprogram}
  \vfill
  {\LARGE \@ecourse}
  \vspace{2cm}\par
  {\Large \@edate}
\end{center}
\cleardoublepage
\thispagestyle{empty}
\begin{center}
  \vfill
  \begin{lineskiptitle}
    \fbox{\LARGE \@etitle}
  \end{lineskiptitle}
  \vspace{2cm}\par
  {\Large \@eauthor \\ \@eprogram}
  \vspace{0.5cm}\par
  {\Large Advised by \@esupervisor \\ Signature \underline{\hspace{5cm}}}
  \vfill
  {\LARGE \@ecourse}
\end{center}
\pagenumbering{roman}
}

