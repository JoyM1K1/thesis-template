\def\jprogram#1{\gdef\@jprogram{#1}}
\def\jcourse#1{\gdef\@jcourse{#1}}
\def\jtitle#1{\gdef\@jtitle{#1}}
\def\jauthor#1{\gdef\@jauthor{#1}}
\def\jmajor#1{\gdef\@jmajor{#1}}
\def\jdate#1{\gdef\@jdate{#1}}
\def\jsupervisor#1{\gdef\@jsupervisor{#1}}

\def\eprogram#1{\gdef\@eprogram{#1}}
\def\ecourse#1{\gdef\@ecourse{#1}}
\def\etitle#1{\gdef\@etitle{#1}}
\def\eauthor#1{\gdef\@eauthor{#1}}
\def\emajor#1{\gdef\@emajor{#1}}
\def\edate#1{\gdef\@edate{#1}}
